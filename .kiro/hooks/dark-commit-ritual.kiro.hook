{
  "enabled": true,
  "name": "Dark Architect Commit Ritual",
  "description": "Automatically generates commit messages in the Dark Architect's mystical tone when code changes are detected, reading your modifications and crafting ritualistic commit messages",
  "version": "1",
  "when": {
    "type": "fileEdited",
    "patterns": [
      "**/*.ts",
      "**/*.tsx",
      "**/*.js",
      "**/*.jsx",
      "**/*.json",
      "**/*.md",
      "**/*.css",
      "**/*.html",
      "**/*.yml",
      "**/*.yaml",
      "**/*.toml"
    ]
  },
