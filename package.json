{
  "name": "necroverse",
  "version": "1.0.0",
  "private": true,
  "description": "Necroverse - Where Dead Tech Breathes Again",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build --continue",
    "build:netlify": "pnpm install --no-frozen-lockfile && pnpm --filter @necroverse/necroplay build",
    "build:netlify:necrodev": "pnpm install --no-frozen-lockfile && pnpm --filter @necroverse/necrodev build",
    "build:netlify:necroplay": "pnpm install --no-frozen-lockfile && pnpm --filter @necroverse/necroplay build",
    "build:github:necrodev": "NEXT_EXPORT=true pnpm --filter @necroverse/necrodev build",
    "build:github:necroplay": "NEXT_EXPORT=true pnpm --filter @necroverse/necroplay build",
    "build:github:necrodev:local": "cross-env NEXT_EXPORT=true NEXT_PUBLIC_BASE_PATH= pnpm --filter @necroverse/necrodev build",
    "build:github:necroplay:local": "cross-env NEXT_EXPORT=true NEXT_PUBLIC_BASE_PATH= pnpm --filter @necroverse/necroplay build",
    "build:github:amiron": "VITE_BASE_PATH=/NecroVerse/amiron pnpm --filter @amiron/exec build && pnpm --filter @amiron/pal build && pnpm --filter @amiron/workbench build && pnpm --filter @amiron/ritual-api build && pnpm --filter amiron build",
    "serve:necrodev": "cd apps/necrodev/out && npx serve -p 3000",
    "serve:necroplay": "cd apps/necroplay/out && npx serve -p 3001",
    "build:netlify:all": "pnpm install --no-frozen-lockfile && pnpm --filter @necroverse/necrodev build && pnpm --filter @necroverse/necroplay build",
    "build:vercel": "pnpm install --no-frozen-lockfile && pnpm --filter @necroverse/necrodev build",
    "build:amiron": "pnpm --filter @amiron/exec build && pnpm --filter @amiron/pal build && pnpm --filter @amiron/workbench build && pnpm --filter @amiron/ritual-api build && pnpm --filter amiron build",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "test:e2e": "playwright test"
  },
  "devDependencies": {
    "turbo": "^1.11.0",
    "typescript": "^5.3.3",
    "@types/node": "^20.10.6",
    "eslint": "^8.57.0",
    "prettier": "^3.1.1",
    "@playwright/test": "^1.40.0",
    "rimraf": "^5.0.5",
    "next": "^14.0.4",
    "cross-env": "^7.0.3"
  },
  "packageManager": "pnpm@8.12.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}

